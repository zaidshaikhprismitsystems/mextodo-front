{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false, // Suppresses 'any' type errors
    "strict": false, // Disables all strict type-checking options
    "skipLibCheck": true, // Skips type-checking of declaration files
    "noUnusedLocals": false, // Suppresses unused local variable errors
    "noUnusedParameters": false, // Suppresses unused parameter errors
    "resolveJsonModule": true // Optional: If you use JSON imports
  }
}